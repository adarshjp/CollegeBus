            <label for="boardingpt">Select the boarding point:</label>
            <select
                name="pass[boardingpt]"
                id="boardingpt"
                class="m-1 form-control"
                required
            >
                <option disabled selected value>-- select an option --</option>
                <% bt.forEach((bt)=>{ %>
