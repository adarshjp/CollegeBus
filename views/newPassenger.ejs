<script type="text/javascript" src="./passenger.js"></script>
<script>
    bt = document.getElementById("boardingpt");
    bt.addEventListener("change", async () => {
        document.getElementById("submit-pay").disabled = true;
        let boardingpt = bt.value;
        let price=await  getPrice(boardingpt)
        let seats=await getSeats(boardingpt)
        if(seats.totalseats<1){
            swal({
                title: "Oh no!",
                text:"Seat Full!",
                icon:"warning"
            })
            document.getElementById("submit-pay").value="Seat Full!"
        }else{
            document.getElementById("submit-pay").disabled = false;
            document.getElementById("submit-pay").value='Pay â‚¹'+price[0].price
        }
    });
</script>
